<!-- Initialize Swiper -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var swiper = new Swiper('.swiper', {
            loop: true,
            autoplay: {
                delay: 3000, // Délai entre chaque slide en ms
                disableOnInteraction: false,
            },
            centeredSlides: true, // Centre les slides
            slidesPerView: 3, // Nombre de slides visibles
            spaceBetween: 30, // Espace entre les slides
            // pagination: {
            //     el: '.swiper-pagination',
            //     clickable: true,
            // },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                // Responsive breakpoints
                320: {
                    slidesPerView: 1,
                    spaceBetween: 10
                },
                640: {
                    slidesPerView: 2,
                    spaceBetween: 20
                },
                1024: {
                    slidesPerView: 3,
                    spaceBetween: 30
                },
                1440: {
                    slidesPerView: 4,
                    spaceBetween: 40
                }
            }
        });

        // Optionnel : Pause l'autoplay lorsque la souris survole le carrousel
        var swiperContainer = document.querySelector('.swiper');
        swiperContainer.addEventListener('mouseenter', () => {
            swiper.autoplay.stop();
        });
        swiperContainer.addEventListener('mouseleave', () => {
            swiper.autoplay.start();
        });
    });
</script>

