<style>
    /* Styles personnalisés */
    .horizontal-timeline .items {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        border-top: 3px solid #e9ecef;
    }

    .horizontal-timeline .items .items-list {
        position: relative;
        text-align: center;
        padding-top: 70px;
    }

    .horizontal-timeline .items .items-list:before {
        content: "";
        position: absolute;
        height: 36px;
        border-right: 2px dashed #dee2e6;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
    }

    .horizontal-timeline .items .items-list .event-date {
        position: absolute;
        top: 36px;
        left: 50%;
        transform: translateX(-50%);
        width: 75px;
        font-size: 0.9rem;
        padding-top: 8px;
    }

    /* Media Queries pour la réactivité */
    @media (max-width: 991px) {
        .horizontal-timeline .items {
            grid-template-columns: repeat(2, 1fr);
            grid-template-areas:
                    "item1 item2"
                    "item3 item4";
        }
        .horizontal-timeline .items .items-list:nth-child(1) {
            grid-area: item1;
        }
        .horizontal-timeline .items .items-list:nth-child(2) {
            grid-area: item2;
        }
        .horizontal-timeline .items .items-list:nth-child(3) {
            grid-area: item3;
        }
        .horizontal-timeline .items .items-list:nth-child(4) {
            grid-area: item4;
        }
    }

    @media (max-width: 767px) {
        .horizontal-timeline .items {
            grid-template-columns: 1fr;
            grid-template-areas:
                    "item1"
                    "item2"
                    "item3"
                    "item4";
        }
        .horizontal-timeline .items .items-list {
            padding-top: 50px;
        }

        /* Suppression des traits en pointillés sur mobile */
        .horizontal-timeline .items .items-list:before {
            display: none;
        }

        /* Ajout d'espace entre la date et l'intitulé du diplôme */
        .horizontal-timeline .items .items-list .event-date {
            margin-bottom: 10px;
        }

        .horizontal-timeline .items .items-list h5 {
            margin-top: 10px;
        }
    }
</style>
